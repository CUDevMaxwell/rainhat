/**
 * Implement hook_permission().
 */
function rainhat_permission() {

  $permissions = array();

  $permissions['administer rainhat'] = array(
    'title' => t('Administer the Rainhat module defaults.'),
    'description' => t('Change the Fedora Connection defaults for the Rainhat Module.'),
    'restrict access' => TRUE,
  );

  $permissions['administer fedora connections transformations'] = array(
    'title' => t('Administer Fedora Repository Connections and Transformations.'),
    'description' => t('Add, Edit, and Remove connections to Fedora Repositories and the transformations used to load the data into Fedora.'),
    'restrict access' => TRUE,
  );

  return $permissions;

}

/**
 * Menu load callback for connections.
 */
function rainhat_fedora_connection_load($id) {
  // The core entity functions take arrays of entities as arguments.
  // If you need functions that accept single entities, you have to define them.
  $fedora_connections = entity_load('rainhat_fedora_connection', array($id));
  return reset($fedora_connections);
}

/**
 * Menu load callback for collections.
 */
function rainhat_transformation_load($id) {
  // The core entity functions take arrays of entities as arguments.
  // If you need functions that accept single entities, you have to define them.
  $transformations = entity_load('rainhat_transformation', array($id));
  return reset($transformations);
}

/**
 * Menu load callback for collections.
 */
function rainhat_datastream_load($id) {
